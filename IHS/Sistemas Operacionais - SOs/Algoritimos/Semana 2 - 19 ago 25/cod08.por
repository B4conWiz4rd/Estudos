programa {
  funcao inicio() {
    real n1
    escreva ("Digite uma distância em mertros: ")
    leia (n1)
    escreva ("A distância de ",n1,"m corresponde a: \n")
    escreva (n1/1000,"Km\n")
    escreva (n1/100,"hm\n")
    escreva (n1/10,"Dam\n")
    escreva (n1*10,"dm\n")
    escreva (n1*100,"cm\n")
    escreva (n1*1000,"mm\n")
  }
}
