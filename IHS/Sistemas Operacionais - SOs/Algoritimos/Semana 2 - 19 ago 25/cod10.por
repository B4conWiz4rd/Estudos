programa {
  funcao inicio() {
    real n1,n2
    escreva ("Calculadora de área'\n")
    escreva ("Digite a largura da parede (em metros): ")
    leia (n1)
    escreva ("Digite a altura da parede (em metros): ")
    leia (n2)
    escreva ("Considerando que um litro de tinta pinta 2m quadrados.\n")
    escreva ("Para pintar uma parede de ",n1*n2,"m²\n")
    escreva ("É necessário usar ",(n1*n2)/2,"Litros de tinta.\n")
  }
}
